<UserControl x:Class="SwipCardSystem.View.FamilyInfoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="160">
    <Grid>
    	<Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
    	</Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource textTitleValue}" Name="guanxi"  Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" d:LayoutOverrides="GridBox"></TextBlock>
        <TextBlock Style="{StaticResource textTitleValue}" Name="xingming" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" d:LayoutOverrides="GridBox"></TextBlock>
        <Image Name="zhaopian" Source="/SwipCardSystem;component/Images/nopicture.jpg" Grid.Column="0" Grid.RowSpan="2" Stretch="Uniform"></Image>
    </Grid>
</UserControl>
