<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="SwipCardSystem.View.ClockUserCtrl"
    Width="200" Height="100" Loaded="UserControl_Loaded">
	<Viewbox>
		<Grid Width="Auto" Height="Auto">
			<Grid.RowDefinitions>
				<RowDefinition Height="0.74*"/>
				<RowDefinition Height="0.26*"/>
			</Grid.RowDefinitions>
			<TextBlock Width="Auto" Height="Auto" Text="00:00" TextWrapping="Wrap" FontSize="38" Foreground="#FF723706" x:Name="textBlock_Time" Grid.RowSpan="1">
				<!--<TextBlock.BitmapEffect>
					<OuterGlowBitmapEffect Opacity="0.6"/>
				</TextBlock.BitmapEffect>-->
			</TextBlock>
			<TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Grid.Row="1" Foreground="#FF723706" Text="Mondy" TextWrapping="Wrap" x:Name="textBlock_Date">
				<!--<TextBlock.BitmapEffect>
					<OuterGlowBitmapEffect GlowColor="#FF26F1FB" Opacity="0.7"/>
				</TextBlock.BitmapEffect>-->
			</TextBlock>
		</Grid>
	</Viewbox>
</UserControl>
